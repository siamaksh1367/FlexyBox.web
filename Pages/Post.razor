@page "/post/{id:int}"
@using FlexyBox.web.Components
@layout BackedLayout;
@if (_isLoading)
{
<Waiting text="Loading post..."></Waiting>    
}
else
{
    <ShowPost Post="_post"></ShowPost>
    <CommentManager Comments="_commentt" CreateCommand_Handler="CreateComment_handling" PostId="_post.Id" ></CommentManager>
}

